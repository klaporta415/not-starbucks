<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
    <li><%= error %></li>
    <%end %>
  </ul>
<%end %> 

<div class="center" id="login-form">
	<form action="/login" method="post">
		Username <input type="text" name="username"><br>
		Password <input type="password" name="password"><br>
		<input type="submit" value="Login">
	</form>
</div>